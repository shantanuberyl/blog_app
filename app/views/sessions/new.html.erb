<h1 class="text-center">Log In</h1>

<div class="container">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for(:sessions, :html => {class: "form-horizontal", role: "form"}) do |nArt| %>
    <div class="form-group">
          <%= nArt.label :email, class: "control-label" %>
          <%= nArt.email_field :email, class: "form-control", placeholder: "Enter Email" %>
    </div>
    <div class="form-group">
      <%= nArt.label :password, class: "control-label" %>
      <%= nArt.password_field :password, class: "form-control", placeholder: "Enter password", autocomplete: "off" %>
    </div>
    <div class="form-group">
      <%= nArt.submit "Log In", class: "btn-lg sBtn" %>
    </div>
    <% end %>
  </div>
</div>
